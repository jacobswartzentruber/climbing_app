<h1>Create a new Route</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for([@gym, @gym.routes.build]) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
      
      <%= f.label :color %>
      <%= f.color_field :color, class: "form-control" %>
      
      <%= f.label :difficulty %>
      <%= f.text_field :difficulty, class: "form-control" %>
      
      <%= f.label :description %>
      <%= f.text_area :description, placeholder: "Any notes to share?", class: "form-control" %>

      <%= f.submit "Create Route", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>